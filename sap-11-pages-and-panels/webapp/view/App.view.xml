<mvc:View controllerName="sap.ui/sap-11-pages-and-panels.controller.App"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true">
    <App>
        <pages>
            <Page title="{i18>homePageTitle}">
                <content>
                    <Panel
                        headerText="{i18n>helloPanelTitle}">
                        <content>
                            <Button
                                    text="{i18n>showHelloButtonText}"
                                    press=".onShowHello"
                            />
                            <Input value="{/recipient/name}"
                                   description="{/recipient/name}"
                                   valueLiveUpdate="true"
                                   width="60%"
                            />
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>